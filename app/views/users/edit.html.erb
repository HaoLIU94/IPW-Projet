<h2>Setting</h2>

<%= form_for(@user, html: { method: :put }) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

    <div class="field">
      <%= f.label "As a professor" %> <br />
      <%= f.check_box :prof, {}, true, false %> <br />
    </div>

    <div class="field">
      <%= f.label "Activate account" %> <br />
      <%= f.check_box :approved, {}, true, false %> <br />
    </div>

    <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
