<%= content_for :page_stylesheet do %>
    <!-- 这是 index.html.erb 里单独使用的 -->
<% end %>

<%- model_class = Score -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:student) %></th>
      <th><%= model_class.human_attribute_name(:exam) %></th>
      <th><%= model_class.human_attribute_name(:result) %></th>
      <th><%= model_class.human_attribute_name(:prof) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= link_to score.id, score_path(score) %></td>
        <td><%= score.student %></td>
        <td><%= score.exam %></td>
        <td><%= score.result %></td>
        <td><%= score.prof %></td>
        <td><%= score.date %></td>
        <td><%=l score.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      score_path(score), :class => 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_score_path,
            :class => 'btn btn-primary' %>