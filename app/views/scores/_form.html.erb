<%= form_for @score,remote: true, :html => { :class => "form-horizontal score" } do |f| %>

  <% if @score.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@score.errors.count, "error") %> prohibited this score from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @score.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :student, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :student, :class => 'form-control' %>
    </div>
    <%=f.error_span(:student) %>
  </div>
  <div class="form-group">
    <%= f.label :exam, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :exam, :class => 'form-control' %>
    </div>
    <%=f.error_span(:exam) %>
  </div>
  <div class="form-group">
    <%= f.label :result, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :result, :class => 'form-control' %>
    </div>
    <%=f.error_span(:result) %>
  </div>
  <div class="form-group">
    <%= f.label :prof, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :prof, :class => 'form-control' %>
    </div>
    <%=f.error_span(:prof) %>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary', :data => { :"disable-with" => "Wait a second..." } %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                scores_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
