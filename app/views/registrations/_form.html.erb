<div class="border-form-div">
  <%= form_for @registration, :html => { :class => "form-horizontal registration" } do |f| %>
      <%= f.text_field :email, :autofocus => true, :placeholder => 'Email address' %>
      <%= f.text_field :password, :placeholder => 'Password' %>
      <%= f.text_field :first_name,:placeholder => 'First name'%>
      <%= f.text_field :last_name,:placeholder => 'Last name' %>
      <%= f.submit "Send you infos",:class=>'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  registrations_path, :class => 'btn btn-default' %>

  <% end %>
</div>