<% end %>

<%- model_class = User -%>
<div class="page-header">
  <h2>Professor list</h2>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:Id_professor) %></th>
    <th><%= model_class.human_attribute_name(:first_name) %></th>
    <th><%= model_class.human_attribute_name(:last_name) %></th>
    <th><%= model_class.human_attribute_name(:User_type) %></th>
    <th><%= model_class.human_attribute_name(:email) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @users = User.all %>
  <% @users.where(:prof => true).each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td> <%if user.admin?%>
              <%=  'Administrator' %>
          <%else if user.prof?%>
                  <%= 'Professor' %>
              <%else if user.student?%>
                      <%= 'Student' %>
                  <%end%>
              <%end%>
          <%end%>
        </td>
        <td><%= user.email %>
        <td>
          <%if current_user.admin?%>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_user_registration_path(user), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          registration_path(user),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
          <%end%>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

