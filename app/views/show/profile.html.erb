<%= content_for :page_stylesheet do %>
    <!-- 这是 index.html.erb 里单独使用的 -->
<% end %>

<%- model_class = User -%>
<div class="page-header">
  <h2>Profile information</h2>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:first_name) %></th>
    <th><%= model_class.human_attribute_name(:last_name) %></th>
    <th><%= model_class.human_attribute_name(:User_type) %></th>
    <th><%= model_class.human_attribute_name(:email) %></th>
    <th><%= model_class.human_attribute_name(:created_at) %></th>
    <th><%= model_class.human_attribute_name(:last_sign_in_at) %></th>
    <th><%= model_class.human_attribute_name(:sign_in_count) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% user = current_user %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td> <%if current_user.admin?%>
              <%=  'Administrator' %>
         <%else if current_user.prof?%>
              <%= 'Professor' %>
         <%else if current_user.student?%>
              <%= 'Student' %>
         <%end%>
         <%end%>
         <%end%>
    </td>
    <td><%= user.email %>
    <td><%= user.created_at%></td>
    <td><%= user.last_sign_in_at %></td>
    <td><%= user.sign_in_count%></td>

  </tr>
  </tbody>
</table>